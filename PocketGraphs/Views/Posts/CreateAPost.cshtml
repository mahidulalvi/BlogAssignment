@model CreatePostViewModel


@{
    ViewBag.Title = "CreateAPost";
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<h2>Create New Post</h2>

<form method="post" enctype="multipart/form-data">

    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(input => input.Title, "Title")
        @Html.TextBoxFor(input => input.Title, new { @class = "form-control", placeholder = "Title" })
        @Html.ValidationMessageFor(input => input.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(input => input.Body, "Body")
        @Html.TextAreaFor(input => input.Body, new { @class = "form-control", placeholder = "Body", id = "textAreaForBody" })
        @Html.ValidationMessageFor(input => input.Body)
    </div>
    <div class="form-group">
        <input type="file" name="Media" />
    </div>
    <div class="form-group">
        @Html.LabelFor(input => input.Published, "Publish")
        @Html.CheckBoxFor(input => input.Published)
        @Html.ValidationMessageFor(input => input.Published)
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

<script src="~/Scripts/tinymce/tinymce.min.js"></script>
<script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
@section scriptsTinyMCE{
    @Scripts.Render("~/bundles/tinyMCE_JS")
}