@model EditCommentViewModel
@{
    ViewBag.Title = "_EditACommentPartial";
}

<form method="post" action="@Url.Action("_EditACommentPartial", "Posts", new { CommentId = Model.CommentId })">
    @Html.ValidationSummary(true)

    <div>
        @if (TempData["SelectedCommentId"] != null && TempData["SelectedCommentId"].ToString() == Model.CommentId)
        {
            @TempData["BodyErrorMessage"];
        }
    </div>

    <div class="form-group">
        <h4>Comment</h4>
        @Html.TextAreaFor(input => input.Body)
        <p>
            @Html.ValidationMessageFor(input => input.Body)
        </p>
    </div>

    <div>
        @if (TempData["SelectedCommentId"] != null && TempData["SelectedCommentId"].ToString() == Model.CommentId)
        {
            @TempData["UpdateReasonErrorMessage"]
        }
    </div>

    <div class="form-group">
        <h4>Reason For Updating</h4>
        @Html.TextAreaFor(input => input.UpdateReason)
        <p>
            @Html.ValidationMessageFor(input => input.UpdateReason)
        </p>
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>

<form method="post" action="@Url.Action("DeleteAComment", "Posts", new { Id = Model.CommentId })">
    <a href="#" class="btn-delete">Delete</a>
</form>


@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
