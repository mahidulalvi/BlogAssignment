@model CreateCommentViewModel
@{
    ViewBag.Title = "_EditACommentPartial";
}

<h2>Edit Comment</h2>

<form method="post" action="@Url.Action("_EditACommentPartial", "Posts", new { CommentId = Model.CommentId })">
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(input => input.Body, "Comment")
        @Html.TextAreaFor(input => input.Body)
    </div>

    <div class="form-group">
        @Html.LabelFor(input => input.UpdateReason, "Reason for updating")
        @Html.TextAreaFor(input => input.UpdateReason)
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>

<form method="post" action="@Url.Action("DeleteAComment", "Posts", new { Id = Model.CommentId })">
    <a href="#" class="btn-delete">Delete</a>
</form>


@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
